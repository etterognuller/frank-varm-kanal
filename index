    <script>
        // SÃ¸gefunktion
        document.getElementById('searchBox').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#ratingsBody tr');
            
            rows.forEach(row => {
                const gameTitle = row.querySelector('.game-title').textContent.toLowerCase();
                if (gameTitle.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Sorteringsfunktion
        let sortDirection = {};
        
        function sortTable(columnIndex) {
            const table = document.getElementById('ratingsTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            
            // Toggle sort direction
            sortDirection[columnIndex] = !sortDirection[columnIndex];
            
            rows.sort((a, b) => {
                const aValue = a.cells[columnIndex].textContent.trim();
                const bValue = b.cells[columnIndex].textContent.trim();
                
                // Check if values are numbers
                const aNum = parseFloat(aValue);
                const bNum = parseFloat(bValue);
                
                let comparison = 0;
                if (!isNaN(aNum) && !isNaN(bNum)) {
                    comparison = aNum - bNum;
                } else {
                    comparison = aValue.localeCompare(bValue);
                }
                
                return sortDirection[columnIndex] ? comparison : -comparison;
            });
            
            // Re-append sorted rows
            rows.forEach(row => tbody.appendChild(row));
        }

        // Opdater statistikker (kan automatiseres)
        function updateStats() {
            const rows = document.querySelectorAll('#ratingsBody tr');
            const overallRatings = Array.from(rows).map(row => 
                parseFloat(row.cells[6].textContent)
            );
            
            document.getElementById('totalGames').textContent = rows.length;
            
            const avgRating = overallRatings.reduce((a, b) => a + b, 0) / overallRatings.length;
            document.getElementById('avgRating').textContent = avgRating.toFixed(1);
            
            const topRated = Math.max(...overallRatings);
            document.getElementById('topRated').textContent = topRated.toFixed(1);
        }

        // Kald updateStats ved load
        updateStats();
    </script>
